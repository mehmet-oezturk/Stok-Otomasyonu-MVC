@model MvcMuratStok2.Models.Entity.TBLMUSTERILER
@{
    ViewBag.Title = "YeniMusteri";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<form class="form-group" method="post">
    <div>
        <label>Müşteri Adı</label>
        
        @Html.TextBoxFor(m => m.MUSTERIAD, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.MUSTERIAD, "", new { @style = "color:green" })@*buradaki name ile sql deki tablo ismi aynı olmak zorunda*@
    </div>
    <div>
        <label>Müşteri Soyadı</label>
        <input type="text" class="form-control" name="MUSTERISOYAD" />@*buradaki name ile sql deki tablo ismi aynı olmak zorunda*@
    </div>
    <div style="margin-top: 15px"> <button class="btn-btninfo" id="btn1">Müşteri Ekle</button></div>
    <script>
        $('#btn1').click(function () {
            alert('Müşteri ekleme işlemi yapıldı...!!')
        });
    </script>
</form>



