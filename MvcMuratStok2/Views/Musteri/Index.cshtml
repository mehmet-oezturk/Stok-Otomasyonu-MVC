@using MvcMuratStok2.Models.Entity;
@model List<TBLMUSTERILER>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}
@using (Html.BeginForm("Index", "Musteri", FormMethod.Get)) //arama işlemi için indexte yazdığımız
{
    <p>Aranacak Müşteri Adı: @Html.TextBox("p")
    <input type="submit" value="Ara"/>
    </p>
}
<table class="table table-bordered">
    @*satır*@
    <tr>

        <th>MÜŞTERİ ID</th>
        <th>MÜŞTERİ ADI</th>
        <th>MÜŞTERİ SOYADI</th>
        <th>SİL</th>
        <th>GÜNCELLE</th>
        <th>ALERT</th>

<tbody>
        @foreach (var ur in Model)
        {
    <tr>
        <td>@ur.MUSTERIID</td>
        <td>@ur.MUSTERIAD</td>
        <td>@ur.MUSTERISOYAD</td>
        <td><a href="/MUSTERI/SIL/@ur.MUSTERIID" class="btn btn-danger">SİL</a></td>
        <td><a href="/MUSTERI/MusteriGetir/@ur.MUSTERIID" class="btn btn-success">GÜNCELLE</a></td>
        <td>@Html.ActionLink("SİL butonu", "SIL", new { id=ur.MUSTERIID }, new { @class = "btn btn-warning", onclick = "return confirm('Gerçekten silmek istiyor musunuz?')" }) </td >@*1.paramtere sil butonu ikinci parametre nereye gideceği yanı SIL yazarak /MUSTERI/SIL e yönlendiriyoruz 3.parametrede ıd değerini alacaz  return confirm= geri dönüşü onaylıyormusun *@
</tr>
        }
    </tbody>

    </tr>
</table>

<a href="/MUSTERI/YENIMUSTERI/" class="btn btn-primary">YENİ MÜŞTERİ EKLE</a>
